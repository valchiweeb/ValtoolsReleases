{
  "name": "valtools",
  "version": "1.7.7",
  "description": "ValTools - Steam Account Manager with Modern UI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "build-backend": "pyinstaller --noconsole --onefile --distpath backend/dist --workpath backend/build --specpath backend backend/automation.py && pyinstaller --noconsole --onefile --distpath backend/dist --workpath backend/build --specpath backend backend/steamguard_sync.py"
  },
  "author": "ValTools",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.valtools.app",
    "productName": "ValTools",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ValTools"
    },
    "publish": {
      "provider": "github",
      "owner": "daffafitrony-jpg",
      "repo": "ValtoolsReleases",
      "releaseType": "release"
    },
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend",
        "filter": [
          "*.exe"
        ]
      }
    ]
  }
}